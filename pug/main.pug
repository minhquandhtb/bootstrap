mixin img(link)
    img.d-block.w-100(src=link, alt="img")
mixin item(link,title,price,discount,original)
    a(href="#",title=title)
        img.d-block.w-100(src=link, alt="item")
        p.title= title 
        p.price= price
            span.discount= discount
            span.original= original


